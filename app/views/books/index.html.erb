<p id="notice"><%= notice %></p>

<h1>Book Listing</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Price</th>
      <th>Published date</th>
      <th colspan="6"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td>
          <%= book.title.size > 20 ? book.title[0..19] : book.title %>
        </td>
        <td>
          <%= !book.price ? "$0.00" : "$" << (book.price).to_s %>
        </td>
        <td><%= book.published_date %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

